<?xml version="1.0" encoding="UTF-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        
           <LinearLayout
               android:layout_width="10dp"
               android:layout_height="fill_parent"
               android:layout_weight="0.07"
               android:orientation="vertical" >

           <ImageView
               android:id="@+id/imgBookmark"
               android:layout_gravity="center"
               android:layout_width="20dp"
               android:layout_height="25dp"
                />
     		
        </LinearLayout>
         
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2.83"
            android:orientation="vertical" >
        
	        <TextView
	            android:id="@+id/lblAccountName"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="top" 
	            android:layout_marginLeft="5dip"
	            android:textSize="20dip"
	            android:text="Account Name" />
	        
	         <TextView
	            android:id="@+id/lblAccountType"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="bottom" 
	            android:textSize="15dip"
	            android:layout_marginLeft="5dip"
	            android:text="Type" />

            <TextView
                android:id="@+id/lblAccountNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:textSize="15dip"
                android:layout_marginLeft="5dip"
                android:text="Notes" />

            <TextView
                android:id="@+id/lblAccountLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:textSize="15dip"
                android:layout_marginLeft="5dip"
                android:text="Limit" />

        </LinearLayout>
          
         <LinearLayout
             android:layout_width="0dip"
             android:layout_height="fill_parent"
             android:layout_weight="2.22"
             android:orientation="vertical" >
        
	        <TextView
	            android:id="@+id/lblAccountBalance"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal|right"
	            android:text="$"
	            android:textSize="16dip"
	         	android:textColor="#000000"
	            android:layout_marginRight="4dip" 
	            />


             <TextView
	            android:id="@+id/lblAccountId"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal|right"
	            android:text="ID"
	            android:textSize="20dip"
	            android:layout_marginRight="4dip" 
	            android:visibility="gone"
	            />


         </LinearLayout>
	    
        
        
    </LinearLayout>
